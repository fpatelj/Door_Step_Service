<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:orientation="vertical"
            android:padding="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:id="@+id/resFeedName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:text="Store Name"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/title_from_to_dots_divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/resFeedName"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="10dp"
                    android:paddingEnd="20dp"
                    android:src="#9e9e9e" />


                <TextView
                    android:id="@+id/resAddFeed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:text="Store Address"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/title_from_to_dots_divider_oone"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/resAddFeed"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="10dp"
                    android:paddingEnd="20dp"
                    android:src="#9e9e9e" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/category"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:text="Category:"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/categoryFeed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        android:elevation="10dp"
                        android:paddingLeft="5dp"
                        android:text="Category Value"
                        android:textSize="16sp" />


                </LinearLayout>

                <ImageView
                    android:id="@+id/title_from_to_dots_divider_one"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/category"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="10dp"
                    android:paddingEnd="20dp"
                    android:src="#9e9e9e" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        android:paddingLeft="5dp"
                        android:text="Reviewer:"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/personFeedName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        android:elevation="10dp"
                        android:paddingLeft="5dp"
                        android:text="Person Name"
                        android:textSize="16sp" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/title_from_to_dots_divider_two"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/personFeedName"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="10dp"
                    android:paddingEnd="20dp"
                    android:src="#9e9e9e" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        android:paddingLeft="5dp"
                        android:text="Reviews:"
                        android:textSize="16sp" />


                    <TextView
                        android:id="@+id/reviewFeed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        android:elevation="10dp"
                        android:paddingLeft="5dp"
                        android:text="Reviews" />


                </LinearLayout>


            </LinearLayout>

        </LinearLayout>


    </android.support.v7.widget.CardView>
</RelativeLayout>
