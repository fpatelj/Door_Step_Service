<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@color/background"
    android:baselineAligned="false"
    android:orientation="horizontal">

    <!-- LEFT TITLE PART -->
    <RelativeLayout
        android:layout_width="250dp"
        android:layout_height="270dp"
        android:layout_weight="3"
        android:background="@color/background"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="20dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="20dp">


        <TextView
            android:id="@+id/title_time_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/title_date_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/title_time_label"
            android:layout_alignParentStart="true"
            android:textColor="@android:color/white"
            android:textSize="12sp" />


    </RelativeLayout>
    <!-- RIGHT TITLE PART -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:layout_weight="1"
        android:background="#fff"
        android:paddingBottom="10dp"
        android:paddingEnd="20dp"
        android:paddingStart="15dp"
        android:paddingTop="20dp">


        <TextView
            android:id="@+id/storeDispName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-5dp"
            android:ellipsize="marquee"
            android:fadingEdge="horizontal"
            android:singleLine="true"
            android:text="Store Name"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold" />


        <ImageView
            android:id="@+id/title_from_to_dots_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/storeDispName"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp"
            android:paddingEnd="20dp"
            android:src="#9e9e9e" />

        <TextView
            android:id="@+id/title_to_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title_from_to_dots_divider"
            android:ellipsize="marquee"
            android:fadingEdge="horizontal"
            android:singleLine="true"
            android:text="Store Address"
            android:textColor="#9e9e9e"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/title_from_to_dots_divider_two"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/title_to_address"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp"
            android:paddingEnd="20dp"
            android:src="#9e9e9e" />


        <TextView
            android:id="@+id/serviceDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title_from_to_dots_divider_two"
            android:ellipsize="marquee"
            android:fadingEdge="horizontal"
            android:singleLine="true"
            android:text="Service Details"
            android:textColor="#9e9e9e"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/sink"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_below="@id/serviceDetails"
            android:layout_marginTop="5dp"
            android:maxLines="3"
            android:maxWidth="100dp"
            android:fadingEdge="horizontal"
            android:text="Textview 1"
            android:textColor="#000"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/sinkprice"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_below="@id/serviceDetails"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/sink"
            android:ellipsize="marquee"
            android:fadingEdge="horizontal"
            android:text="Textview Price"
            android:textColor="#000"
            android:textSize="12sp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/btnCall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_to_address"
            android:layout_marginTop="110dp"
            android:background="@color/background"
            android:drawableLeft="@drawable/phone"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:text="Contact Number" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/btnCall"
            android:layout_marginTop="10dp"
            android:text="Click on the Store to Book a service"
            android:textSize="10sp" />


    </RelativeLayout>
</LinearLayout>